<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stuffexchange.stuffexchangeandroid" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".StuffExchangeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".AddGiftActivity"
            android:label="@string/title_activity_new_gift" >
        </activity>
        <activity
            android:name=".GiftActivity"
            android:label="@string/title_activity_gift" >
        </activity>
        <activity
            android:name=".AddImageActivity"
            android:label="@string/title_activity_add_image" >
        </activity>
        <activity
            android:name=".MakeOfferActivity"
            android:label="@string/title_activity_make_offer" >
        </activity>
    </application>

</manifest>
