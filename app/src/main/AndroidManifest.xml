<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stuffexchange.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name="com.stuffexchange.app.StuffExchangeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.stuffexchange.app.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.stuffexchange.app.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.stuffexchange.app.AddGiftActivity"
            android:label="@string/title_activity_new_gift" >
        </activity>
        <activity
            android:name="com.stuffexchange.app.GiftActivity"
            android:label="@string/title_activity_gift" >
        </activity>
        <activity
            android:name="com.stuffexchange.app.MakeOfferActivity"
            android:label="@string/title_activity_make_offer" >
        </activity>
        <activity
            android:name="com.stuffexchange.app.EditGiftActivity"
            android:label="@string/title_activity_edit_gift" >
        </activity>
        <activity
            android:name="com.stuffexchange.app.ViewImageActivity"
            android:label="@string/title_activity_view_image" >
        </activity>
    </application>

</manifest>
