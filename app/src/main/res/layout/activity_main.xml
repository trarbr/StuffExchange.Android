<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stuffexchange.stuffexchangeandroid.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greeterTextView"
        android:text="Hi Troels! Here's what we've found near you!" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greeterTextView"
        android:layout_marginTop="10dp"
        android:text="Activate"
        android:id="@+id/activateButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activateButton"
        android:layout_marginTop="10dp"
        android:text="Create gift"
        android:id="@+id/createGiftButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <ListView
        android:layout_below="@+id/createGiftButton"
        android:layout_marginTop="20dp"
        android:id="@+id/giftsListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
