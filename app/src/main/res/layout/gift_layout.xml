<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/giftView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/fiatbravo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/giftTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/giftView"
        android:layout_toEndOf="@+id/giftView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This is an awesome thing. bla bla bal bla bbla. bla bla bal bla bbla. bla bla bal bla bbla. bla bla bal bla bbla. bla bla bal bla bbla"
        android:id="@+id/giftDescription"
        android:layout_below="@+id/giftTitle"
        android:layout_toRightOf="@+id/giftView"
        android:layout_toEndOf="@+id/giftView"
        android:layout_alignBottom="@+id/giftView" />
</RelativeLayout>
